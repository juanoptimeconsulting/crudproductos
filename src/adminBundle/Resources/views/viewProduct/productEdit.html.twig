{% extends "adminBundle::inicio.html.twig"%}
{% block content %}


    {#llegada del controlador #}
    <h2>EDICION DE PRODUCTOS: {{ product.name  }}</h2>
    <div class="form-row">


        {% if app.session.flashbag().get('estado') is defined %}


            {% for message in app.session.flashbag().get('estado')%}


                {% if message ==  "el Producto se ha editado correctamente"%}

                    <div class="alert alert-primary" role="alert">
                        {{ message }}
                    </div>
                {% else %}
                    <div class="alert alert-primary" role="alert">
                        {{ message }}
                    </div>
                {%endif%}




            {%endfor%}
        {%endif%}
        <div class="form-group col-md-6">

            {{form_start(form)}}
           <br/>
            {{form_end(form)}}


        </div>

    </div>
{% endblock%}